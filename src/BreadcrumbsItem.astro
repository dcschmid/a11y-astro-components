---
interface Props {
  href?: string;
  label: string;
  currentPage?: boolean;
  className?: string;
}

const { href = "#", label = "Breadcrumb", currentPage = false, className = "breadcrumbs__item" } = Astro.props;
---

<li class={className}>
  {currentPage ? <span aria-current="page">{label}</span> : <a href={href}>{label}</a>}
</li>

<style is:global>
  .breadcrumbs__item {
    display: inline;
  }

  .breadcrumbs__item::after {
    content: "/";
    margin: 0 0.5rem;
  }

  .breadcrumbs__item:last-child::after {
    content: "";
  }
</style>
